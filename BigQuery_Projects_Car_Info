/* CREATED BY: RUBY SMITH
CREATED ON: 024-2024
GOAL: DATA DESCRIPTION STATES THAT CAR LENGTHS SHOULD BE BETWEEN 141.1 AND 208.1. VERIFY */

SELECT
  MIN(length) AS min_length,
  MAX(length) AS max_length
FROM rs-project-01-429415.cars.cars_info;
