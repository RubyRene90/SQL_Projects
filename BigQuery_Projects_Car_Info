/* CREATED BY: RUBY SMITH
CREATED ON: 07-24-2024
GOAL: MAKE SURE THERE ARE ONLY TWO FUEL TYPES AVAILABLE IN CAR-INFO TABLE */

SELECT
  DISTINCT fuel_type
FROM rs-project-01-429415.cars.cars_info;

--OR

SELECT
  fuel_type
FROM rs-project-01-429415.cars.cars_info
WHERE
  fuel_type <> 'gas' 
  AND fuel_type <> 'diesel';
